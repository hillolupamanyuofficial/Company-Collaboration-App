@model CCbook2.Entities.Comment
@using CCbook2.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">

            <input asp-for="CommentorName" class="form-control" value="@UserManager.GetUserName(User)" type="hidden">

            </div>
            <div class="form-group">
                <input asp-for="CreatedDateTime" class="form-control"  value="@DateTime.Now" type="hidden"/>
            </div>
            <div class="form-group">
                            <input asp-for="PostId" value="@Model.PostId" type="hidden" >
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-postId="@ViewBag.PostId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
